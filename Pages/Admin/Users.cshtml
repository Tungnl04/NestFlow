@page
@model NestFlow.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Quản lý người dùng - Nestflow";
}

<div class="container-fluid px-4 py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="nf-sidebar">
                <h4 class="mb-4">Menu quản lý</h4>
                <ul class="nf-sidebar-menu">
                    <li>
                        <a asp-page="/Admin/Dashboard">
                            <i class="fas fa-home"></i> Trang tổng quan
                        </a>
                    </li>

                    <li class="active">
                        <a asp-page="/Admin/Users">
                            <i class="fas fa-users"></i> Quản lý người dùng
                        </a>
                    </li>

                    <li>
                        <a asp-page="/Admin/Posts">
                            <i class="fas fa-newspaper"></i> Quản lý tin đăng
                        </a>
                    </li>

                    <li>
                        <a asp-page="/Admin/Requests">
                            <i class="fas fa-bell"></i> Quản lý yêu cầu
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Nội dung chính -->
        <div class="col-md-9">
            <h2 class="mb-4">Quản lý người dùng</h2>

            <!-- Thống kê -->
            <div class="row g-4 mb-4" id="statisticsContainer">
                <div class="col-md-3">
                    <div class="nf-stat-card">
                        <div class="nf-stat-icon" style="background: #4A90E2;">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="nf-stat-content">
                            <div class="nf-stat-value" id="totalUsers">-</div>
                            <div class="nf-stat-label">Tổng người dùng</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="nf-stat-card">
                        <div class="nf-stat-icon" style="background: #50C878;">
                            <i class="fas fa-user-check"></i>
                        </div>
                        <div class="nf-stat-content">
                            <div class="nf-stat-value" id="activeUsers">-</div>
                            <div class="nf-stat-label">Đang hoạt động</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="nf-stat-card">
                        <div class="nf-stat-icon" style="background: #FF6B6B;">
                            <i class="fas fa-home"></i>
                        </div>
                        <div class="nf-stat-content">
                            <div class="nf-stat-value" id="landlords">-</div>
                            <div class="nf-stat-label">Chủ trọ</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="nf-stat-card">
                        <div class="nf-stat-icon" style="background: #FFA500;">
                            <i class="fas fa-user-tie"></i>
                        </div>
                        <div class="nf-stat-content">
                            <div class="nf-stat-value" id="renters">-</div>
                            <div class="nf-stat-label">Người thuê</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bộ lọc và tìm kiếm -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control" id="searchInput" 
                                       placeholder="Tìm kiếm theo email, tên, SĐT...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="userTypeFilter">
                                <option value="">Tất cả loại người dùng</option>
                                <option value="landlord">Chủ trọ</option>
                                <option value="renter">Người thuê</option>
                                <option value="admin">Quản trị viên</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">Tất cả trạng thái</option>
                                <option value="active">Hoạt động</option>
                                <option value="inactive">Không hoạt động</option>
                                <option value="banned">Bị khóa</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary w-100" id="filterBtn">
                                <i class="fas fa-filter"></i> Lọc
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Danh sách người dùng -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Danh sách người dùng</h5>
                </div>
                <div class="card-body">
                    <div id="loadingIndicator" class="text-center py-5" style="display: none;">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Đang tải...</span>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover" id="usersTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Họ tên</th>
                                    <th>Số điện thoại</th>
                                    <th>Loại</th>
                                    <th>Trạng thái</th>
                                    <th>Xác thực</th>
                                    <th>Ngày tạo</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="usersTableBody">
                                <!-- Data will be loaded via JavaScript -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Phân trang -->
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div id="paginationInfo" class="text-muted"></div>
                        <nav>
                            <ul class="pagination mb-0" id="pagination"></ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Chi tiết người dùng -->
<div class="modal fade" id="userDetailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết người dùng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="userDetailContent">
                <!-- Content will be loaded via JavaScript -->
            </div>
        </div>
    </div>
</div>

<!-- Modal Xác nhận -->
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalTitle">Xác nhận</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="confirmModalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="confirmActionBtn">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

