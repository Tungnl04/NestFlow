@page
@model NestFlow.Pages.Landlord.ContractsModel
@{
    ViewData["Title"] = "Hợp đồng & thanh toán - Nestflow";
    Layout = "~/Pages/Shared/_LandlordLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
            <h2 class="mb-4">Hợp đồng & thanh toán</h2>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Lịch thanh toán</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Phòng</th>
                                    <th>Người thuê</th>
                                    <th>Ngày thanh toán</th>
                                    <th>Số tiền</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Phòng #001</td>
                                    <td>Nguyễn Văn A</td>
                                    <td>01/02/2026</td>
                                    <td>1.500.000đ</td>
                                    <td><span class="badge bg-success">Đã thanh toán</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Xem hóa đơn</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Phòng #002</td>
                                    <td>Trần Thị B</td>
                                    <td>15/01/2026</td>
                                    <td>1.800.000đ</td>
                                    <td><span class="badge bg-warning">Chưa thanh toán</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Nhắc nhở</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Hợp đồng thuê phòng</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Phòng</th>
                                    <th>Người thuê</th>
                                    <th>Ngày bắt đầu</th>
                                    <th>Ngày kết thúc</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Phòng #001</td>
                                    <td>Nguyễn Văn A</td>
                                    <td>01/01/2026</td>
                                    <td>01/04/2026</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Xem hợp đồng</button>
                                        <button class="btn btn-sm btn-outline-primary">Tải xuống</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Phòng #002</td>
                                    <td>Trần Thị B</td>
                                    <td>15/12/2025</td>
                                    <td>15/03/2026</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Xem hợp đồng</button>
                                        <button class="btn btn-sm btn-outline-primary">Tải xuống</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
</div>
