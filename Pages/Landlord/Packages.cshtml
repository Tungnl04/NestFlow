<style>
        background: #fff;
        border: 2px solid #e9ecef;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s;
        position: relative;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .nf-package-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

    .nf-package-vip {
        border-color: #EFBF4D;
        background: linear-gradient(to bottom, rgba(239, 191, 77, 0.1) 0%, #fff 20%);
    }

    .nf-package-vip-plus {
        border-color: #333;
    }

    .nf-package-management {
        border-color: #4FB3B3;
        background: linear-gradient(to bottom, rgba(79, 179, 179, 0.1) 0%, #fff 20%);
    }

    .nf-package-management-only {
        border-color: #6c757d;
        background: linear-gradient(to bottom, #f8f9fa 0%, #fff 20%);
    }

    .nf-package-badge {
        position: absolute;
        top: 0;
        right: 0;
        background: #EFBF4D;
        color: #2B3448;
        padding: 0.5rem 1rem;
        border-radius: 0 15px 0 15px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        z-index: 1;
    }

    .nf-package-header {
        padding: 1.5rem 1.5rem 1rem;
        border-bottom: 1px solid #e9ecef;
    }

        .nf-package-header h5 {
            font-size: 1.3rem;
            font-weight: 700;
            color: #333;
        }

    .nf-package-body {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .nf-package-price {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .nf-price-main {
        font-size: 2rem;
        font-weight: 700;
        color: #4FB3B3;
        line-height: 1;
    }

    .nf-package-vip .nf-price-main {
        color: #EFBF4D;
    }

    .nf-package-management .nf-price-main {
        color: #4FB3B3;
    }

    .nf-package-management-only .nf-price-main {
        color: #1D5A6E;
    }

    .nf-price-period {
        font-size: 0.9rem;
        color: #666;
        margin-top: 0.25rem;
    }

    .nf-price-month {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin-top: 0.5rem;
    }

    .nf-price-discount {
        font-size: 0.85rem;
        color: #EFBF4D;
        font-weight: 600;
        margin-top: 0.25rem;
    }

    .nf-package-features {
        list-style: none;
        padding: 0;
        margin: 0 0 1.5rem;
        flex: 1;
    }

        .nf-package-features li {
            padding: 0.5rem 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.95rem;
        }

    .nf-benefits-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .nf-benefits-list li {
            padding: 0.75rem 0;
            padding-left: 1.5rem;
            position: relative;
            color: #4A90E2;
            font-weight: 500;
        }

            .nf-benefits-list li::before {
                content: '•';
                position: absolute;
                left: 0;
                font-size: 1.5rem;
                line-height: 1;
            }

    .nf-comparison-table {
        font-size: 0.9rem;
    }

        .nf-comparison-table th {
            background: #f8f9fa;
            font-weight: 600;
            vertical-align: middle;
            text-align: center;
        }

            .nf-comparison-table th:first-child {
                text-align: left;
            }

        .nf-comparison-table td {
            vertical-align: middle;
            text-align: center;
        }

            .nf-comparison-table td:first-child {
                text-align: left;
                font-weight: 500;
            }

            .nf-comparison-table td small {
                display: block;
                margin-top: 0.25rem;
                font-size: 0.8rem;
            }

        .nf-comparison-table .table-info {
            background: #e7f3ff;
            font-weight: 700;
        }

            .nf-comparison-table .table-info td {
                padding: 0.75rem;
                text-align: left;
            }
</style>