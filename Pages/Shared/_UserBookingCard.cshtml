@model NestFlow.Pages.Home.UserBookingViewModel

<div class="card h-100 shadow-sm">
    <img src="@Model.PropertyImage" class="card-img-top" alt="@Model.PropertyTitle" style="height: 200px; object-fit: cover;">
    <div class="card-body">
        <h5 class="card-title">@Model.PropertyTitle</h5>
        <p class="text-muted small mb-3">
            <i class="fas fa-map-marker-alt me-1"></i>
            @Model.PropertyAddress
        </p>
        
        <div class="mb-3">
            <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Tiền cọc:</span>
                <strong class="text-primary">@Model.DepositAmount.ToString("N0") VNĐ</strong>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Ngày xem:</span>
                <strong>@Model.BookingDate.ToString("dd/MM/yyyy") @Model.BookingTime.ToString("HH:mm")</strong>
            </div>
            <div class="d-flex justify-content-between">
                <span class="text-muted">Ngày đặt:</span>
                <span>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
            </div>
        </div>

        <hr>

        <h6 class="mb-2">
            <i class="fas fa-user me-2"></i>Thông tin chủ nhà
        </h6>
        <div class="mb-2">
            <strong>@Model.LandlordName</strong>
        </div>
        <div class="mb-3">
            <i class="fas fa-phone me-2 text-muted"></i>
            <a href="tel:@Model.LandlordPhone">@Model.LandlordPhone</a>
        </div>

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="alert alert-light mb-3">
                <small>
                    <i class="fas fa-sticky-note me-2"></i>
                    <strong>Ghi chú:</strong> @Model.Notes
                </small>
            </div>
        }

        @if (Model.Status == "Pending")
        {
            <div class="alert alert-warning mb-0">
                <i class="fas fa-clock me-2"></i>
                Chờ chủ nhà xác nhận
            </div>
        }
        else if (Model.Status == "Confirmed")
        {
            <div class="alert alert-success mb-3">
                <i class="fas fa-check-circle me-2"></i>
                Đã được chấp nhận
            </div>
            <a href="/Room/Detail?id=@Model.PropertyId" class="btn btn-primary w-100">
                <i class="fas fa-eye me-2"></i>Xem chi tiết phòng
            </a>
        }
        else if (Model.Status == "Rejected")
        {
            <div class="alert alert-danger mb-3">
                <i class="fas fa-times-circle me-2"></i>
                Đã bị từ chối - Tiền đã hoàn lại
            </div>
            <a href="/Home/MyWallet" class="btn btn-outline-primary w-100">
                <i class="fas fa-wallet me-2"></i>Xem ví của tôi
            </a>
        }
    </div>
</div>
